package layout

templ Header(email *string) {
    <header class="bg-blue-600 flex justify-between text-gray-50 shadow-md py-4 px-8">
        <h2 class="text-2xl font-bold font-serif">Trip Planner</h2>
        <div>
            if email != nil {
            <p>Welcome User,</p>
            <p>{ *email }</p>
                } else {
                <p>Welcome,</p>
                <p>Enter your email below</p>
            }
        </div>
    </header>
}
